{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "API_IMAGE_GENERATE": "readonly",
    "API_PROMPT_BUILD": "readonly",
    "API_FEED": "readonly",
    "API_CATEGORIES": "readonly",
    "API_IMAGES": "readonly",
    "API_IMAGE_TAGS": "readonly",
    "API_ENDPOINTS": "readonly",
    "CSS_CLASSES": "readonly",
    "HTML_ICONS": "readonly",
    "CONFIG": "readonly",
    "TEXTAREA_CONFIG": "readonly",
    "FEED_CONFIG": "readonly",
    "GUIDANCE_CONFIG": "readonly",
    "RATING_CONFIG": "readonly",
    "STATS_CONFIG": "readonly",
    "PROMPTS_CONFIG": "readonly",
    "IMAGE_CONFIG": "readonly",
    "PROVIDER_CONFIG": "readonly",
    "Utils": "readonly",
    "StateManager": "readonly",
    "globalStateManager": "readonly",
    "IMAGE_WRAPPER_CLASS": "readonly",
    "IMAGE_FULLSCREEN_CLASS": "readonly",
    "IMAGE_CONTROLS_CLASS": "readonly",
    "CLOSE_ICON_HTML": "readonly",
    "PREV_ICON_HTML": "readonly",
    "NEXT_ICON_HTML": "readonly",
    "TAGS_BOX_CLASS": "readonly",
    "LIKE_BTN_HTML": "readonly",
    "Swal": "readonly",
    "Hammer": "readonly",
    "textAreaManager": "readonly",
    "customVariablesManager": "readonly",
    "feedManager": "readonly",
    "guidanceManager": "readonly",
    "uiManager": "readonly",
    "searchManager": "readonly",
    "ratingManager": "readonly",
    "scrollLoadingManager": "readonly",
    "imageManager": "readonly",
    "userManager": "readonly",
    "authManager": "readonly",
    "toolsManager": "readonly",
    "checkUser": "readonly",
    "renderUserUI": "readonly",
    "addPromptToOutput": "readonly",
    "handleMakeBtnClick": "readonly",
    "setupFeedComplete": "readonly",
    "getDownloadButton": "readonly",
    "downloadImage": "readonly",
    "generateImage": "readonly",
    "isProviderSelected": "readonly",
    "isDragging": "readonly",
    "convertPromptToUrl": "readonly",
    "fetchData": "readonly",
    "setupTermCount": "readonly",
    "setupWordTypeSection": "readonly",
    "getCustomVariables": "readonly",
    "errorHandler": "readonly",
    "textarea_cache": "readonly",
    "textarea_utils": "readonly",
    "IMAGE_CATEGORY_SELECTOR": "readonly",
    "IMAGE_CATEGORY_ADD": "readonly",
    "DEFAULT_IMAGE_LIMIT": "readonly",
    "FEED_CONSTANTS": "readonly",
    "TERMS_CONSTANTS": "readonly",
    "TermsCacheManager": "readonly",
    "TermsDOMManager": "readonly",
    "TermsAPIManager": "readonly",
    "TermsUIManager": "readonly",
    "TermsSearchService": "readonly",
    "FeedCacheManager": "readonly",
    "FeedDOMManager": "readonly",
    "FeedAPIManager": "readonly",
    "FeedUIManager": "readonly",
    "FeedFilterManager": "readonly",
    "ImageGenerationAPI": "readonly",
    "ImageDOMManager": "readonly",
    "ImageUIState": "readonly",
    "AdminModels": "readonly",
    "ColorPaletteManager": "readonly",
    "ThemeComposer": "readonly",
    "ThemeCSSGenerator": "readonly",
    "ThemeValidator": "readonly",
    "ProfileAuthUtils": "readonly",
    "ProfileAPIService": "readonly",
    "ProfileDOMManager": "readonly",
    "AvatarManager": "readonly",
    "AIImageGenerator": "readonly",
    "ProfileFormValidator": "readonly",
    "AdminPricingCalculator": "readonly",
    "PromptHelpersForm": "readonly",
    "ProfileFeedManager": "readonly",
    "TextAreaManager": "readonly",
    "FormValidator": "readonly",
    "UIController": "readonly",
    "ContentEditor": "readonly",
    "ThumbnailSelector": "readonly",
    "MediaSelector": "readonly",
    "MediaRenderer": "readonly",
    "ErrorHandler": "readonly",
    "PerformanceUtils": "readonly",
    "aiImageGeneratorService": "readonly",
    "MessagingService": "readonly",
    "MessageComponent": "readonly",
    "PROMPT_HELPERS": "readonly",
    "SimpleThemeService": "readonly",
    "ThemeReadabilityTester": "readonly",
    "tailwind": "readonly",
    "define": "readonly",
    "AdminSharedTable": "readonly",
    "bootstrap": "readonly",
    "AdminPackageManager": "readonly",
    "AdminPromoCardsManager": "readonly",
    "AdminQueueService": "readonly",
    "AdminAPIService": "readonly",
    "AdminQueueMonitor": "readonly",
    "AdminPromoCodeModal": "readonly",
    "AdminSummaryRenderer": "readonly",
    "AdminImageManager": "readonly",
    "AdminEventHandler": "readonly",
    "SystemSettingsManager": "readonly"
  },
  "rules": {
    // === ERROR PREVENTION ===
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-undef": "error",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-debugger": "error",
    "no-alert": "warn",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",

    // === BEST PRACTICES ===
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "curly": "error",
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
    "no-trailing-spaces": "error",
    "no-unused-expressions": "error",
    "no-useless-catch": "error",
    "no-useless-escape": "error",
    "no-global-assign": "error",
    "no-param-reassign": "warn",
    "no-return-assign": "error",
    "no-self-compare": "error",
    "no-sequences": "error",
    "no-throw-literal": "error",
    "no-unmodified-loop-condition": "error",
    "no-unreachable": "error",
    "no-unreachable-loop": "error",
    "no-unsafe-finally": "error",
    "no-unsafe-negation": "error",
    "use-isnan": "error",
    "valid-typeof": "error",

    // === CODE STYLE ===
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "key-spacing": ["error", { "beforeColon": false, "afterColon": true }],
    "keyword-spacing": ["error", { "before": true, "after": true }],
    "space-before-blocks": "error",
    "space-before-function-paren": "off",
    "space-in-parens": ["error", "never"],
    "space-infix-ops": "off",
    "space-unary-ops": ["error", { "words": true, "nonwords": false }],
    "spaced-comment": ["error", "always"],
    "template-curly-spacing": ["error", "never"],
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "block-spacing": "error",
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "camelcase": ["error", { "properties": "never" }],
    "capitalized-comments": "off",
    "comma-style": ["error", "last"],
    "eol-last": ["error", "always"],
    "func-call-spacing": ["error", "never"],
    "func-name-matching": "error",
    "func-names": "warn",
    "func-style": ["error", "expression"],
    "id-blacklist": "off",
    "id-length": "off",
    "id-match": "off",
    "implicit-arrow-linebreak": ["error", "beside"],
    "jsx-quotes": ["error", "prefer-double"],
    "line-comment-position": "off",
    "linebreak-style": ["error", "unix"],
    "lines-around-comment": "off",
    "lines-between-class-members": ["error", "always", { "exceptAfterSingleLine": true }],
    "max-depth": ["warn", 4],
    "max-len": ["warn", { "code": 120, "ignoreUrls": true, "ignoreStrings": true }],
    "max-lines": ["warn", { "max": 500, "skipBlankLines": true, "skipComments": true }],
    "max-lines-per-function": ["warn", { "max": 50, "skipBlankLines": true, "skipComments": true }],
    "max-nested-callbacks": ["warn", 3],
    "max-params": ["warn", 4],
    "max-statements": ["warn", 20],
    "max-statements-per-line": "off",
    "multiline-comment-style": "off",
    "multiline-ternary": ["error", "always-multiline"],
    "new-cap": "error",
    "new-parens": "error",
    "newline-per-chained-call": "off",
    "no-array-constructor": "error",
    "no-bitwise": "error",
    "no-continue": "off",
    "no-inline-comments": "off",
    "no-lonely-if": "error",
    "no-mixed-operators": "off",
    "no-mixed-spaces-and-tabs": "error",
    "no-multi-assign": "error",
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
    "no-negated-condition": "off",
    "no-nested-ternary": "error",
    "no-new-object": "error",
    "no-plusplus": "off",
    "no-restricted-syntax": "off",
    "no-tabs": "error",
    "no-ternary": "off",
    "no-trailing-spaces": "error",
    "no-underscore-dangle": "off",
    "no-unneeded-ternary": "error",
    "no-whitespace-before-property": "error",
    "nonblock-statement-body-position": ["error", "beside"],
    "object-curly-newline": ["error", { "multiline": true, "consistent": true }],
    "object-curly-spacing": ["error", "always"],
    "object-property-newline": ["error", { "allowAllPropertiesOnSameLine": true }],
    "one-var": ["error", "never"],
    "one-var-declaration-per-line": ["error", "always"],
    "operator-assignment": ["error", "always"],
    "operator-linebreak": "off",
    "padded-blocks": "off",
    "padding-line-between-statements": [
      "error",
      { "blankLine": "always", "prev": "*", "next": "return" },
      { "blankLine": "always", "prev": ["const", "let", "var"], "next": "*" },
      { "blankLine": "any", "prev": ["const", "let", "var"], "next": ["const", "let", "var"] }
    ],
    "prefer-object-spread": "error",
    "quote-props": ["error", "as-needed"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "semi-spacing": ["error", { "before": false, "after": true }],
    "semi-style": ["error", "last"],
    "sort-keys": "off",
    "sort-vars": "off",
    "space-before-blocks": "error",
    "space-before-function-paren": "off",
    "space-in-parens": ["error", "never"],
    "space-infix-ops": "off",
    "space-unary-ops": ["error", { "words": true, "nonwords": false }],
    "spaced-comment": ["error", "always"],
    "switch-colon-spacing": ["error", { "after": true, "before": false }],
    "template-tag-spacing": ["error", "never"],
    "unicode-bom": ["error", "never"],
    "wrap-regex": "error",

    // === ES6+ FEATURES ===
    "arrow-body-style": ["error", "as-needed"],
    "arrow-parens": ["error", "as-needed"],
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "constructor-super": "error",
    "generator-star-spacing": ["error", { "before": true, "after": true }],
    "no-class-assign": "error",
    "no-confusing-arrow": "error",
    "no-const-assign": "error",
    "no-dupe-class-members": "error",
    "no-duplicate-imports": "error",
    "no-new-symbol": "error",
    "no-restricted-imports": "off",
    "no-this-before-super": "error",
    "no-useless-computed-key": "error",
    "no-useless-constructor": "error",
    "no-useless-rename": "error",
    "no-var": "error",
    "object-shorthand": ["error", "always"],
    "prefer-arrow-callback": "error",
    "prefer-const": "error",
    "prefer-destructuring": ["error", { "array": true, "object": true }, { "enforceForRenamedProperties": false }],
    "prefer-numeric-literals": "error",
    "prefer-rest-params": "error",
    "prefer-spread": "error",
    "prefer-template": "error",
    "require-yield": "error",
    "rest-spread-spacing": ["error", "never"],
    "sort-imports": "off",
    "symbol-description": "error",
    "template-curly-spacing": ["error", "never"],
    "yield-star-spacing": ["error", "both"]
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "env": {
        "jest": true
      },
      "rules": {
        "no-console": "off",
        "max-lines": "off",
        "max-lines-per-function": "off"
      }
    },
    {
      "files": ["public/js/**/*.js"],
      "rules": {
        "no-console": ["warn", { "allow": ["warn", "error", "log"] }]
      }
    },
    {
      "files": ["public/js/components/**/*.js"],
      "rules": {
        "max-lines": "off",
        "max-lines-per-function": "off"
      }
    }
  ]
}
